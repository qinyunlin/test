<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.concom.entity.dto.xunjia.app.push.CloudPush">
	
	
    <select id="getByMemberId"  resultType="com.concom.entity.dto.xunjia.app.push.CloudPush">
        <![CDATA[
     		select * from youcai.tCloudPush self WHERE self.memberid=#{memberId}
    	]]>
    </select>
    
    <insert id="save">
        <![CDATA[
     		insert into youcai.tCloudPush(memberId,mobile,userId,channelId,device_type) 
     		values(#{memberId},#{mobile},#{userId},#{channelId},#{device_type})
    	]]>
    </insert>
    
    <delete id="delete">
        <![CDATA[
     		delete from youcai.tCloudPush where memberId=#{memberId}
    	]]>
    </delete>
    
    <update id="update" parameterType="com.concom.entity.dto.xunjia.app.push.CloudPush">
        update youcai.tCloudPush 
          <set>
          	<if test="mobile !=null">
          	    mobile=#{mobile},
          	</if>
          	<if test="userId !=null">
          	    userId=#{userId},
          	</if>
          
          	<if test="channelId !=null">
          	    channelId=#{channelId},
          	</if>
          
          	<if test="device_type !=null">
          	    device_type=#{device_type}
          	</if>
          </set>
         where memberId=#{memberId}
    </update>
</mapper>