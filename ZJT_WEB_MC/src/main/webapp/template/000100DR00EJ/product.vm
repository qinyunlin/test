	<title>$!{epShop.getName()}_建材产品_网材网</title>

  </head>
  
 <body> 
	<!-- 引入头部 |$!{pageNo}|$!pageSize|$!recCount|$!pageCount|||$dataInfo.pageNo|$dataInfo.pageSize|$dataInfo.recCount|$dataInfo.pageCount|-->
    #parse($shop_vip_header_dir)
	

<!--	contanier star	-->
<div class="contanier">
	    #parse($shop_vip_left_dir)
  <div class="right">
    
    	<!--	moudel_box_right star	-->
        <div class="moudel_box_right" style="position:relative;">
        	<h1 class="title_bg">建材产品</h1>
            
            <!--	product_big_img star	-->
            <div class="product_big_img" id="testDiv" style="display:none;"><img src="../images/product_img_300x300.jpg" /></div>
            <!--	product_big_img end	-->
            
            <div class="product_list">
             #if($facMaterialForGuestList.size()==0)
				<div class="nofound"></div>
	         #else
    			#set($ids="")
    			#foreach ( $facMaterial in $facMaterialForGuestList )
    				#if($velocityCount>1)
    					#set($ids="$ids,")
    				#end
    			   #set($ids="$ids$!{facMaterial.id}")
                
            	<dl class="product_list_item clearfix">
                	<dt>
                        #if($!{facMaterial.type} == "0")
                	 	  <div class="icon_style_te"></div>
                	 	#elseif($!{facMaterial.type} == "1")
                	 	   <div class="icon_style_hot"></div>
                	 	#elseif($!{facMaterial.type} == "2")
                	 	 <div class="icon_style_new"></div>
                	 	#elseif($!{facMaterial.type} == "3")
                	 	 <div class="icon_style_jian"></div>
                	 	#else 
                	 	  
                	 	#end
                   	    <a id="jc_link" target="_blank" class="shop_product_name" href="$!{ccwcw_dir}/shop/$!{dataInfo.eid}/product/detail-$!{facMaterial.id}.html">
                        		<img src=#if($stringUtil.nullTrim($!{facMaterial.topPhoto}))"$!{ftp_pic}$!{facMaterial.topPhoto}"#else"$!{default_eplogo}"#end width="80" height="80"/>
                        	</a>              </dt>
                       <dd>
                    	<h3 class="txt_sl"><a id="jc_link2" href="$!{ccwcw_dir}/shop/$!{dataInfo.eid}/product/detail-$!{facMaterial.id}.html">$!{facMaterial.name}</a></h3>
                        <div class="txt_xh txt_sl f_l m_r_10">型号：$!{facMaterial.spec}</div>
                        <div class="txt_date txt_sl f_l"><script language="javascript">document.write(changeTime("$!{facMaterial.issueDate}"));</script></div>
                        <div class="txt_pp txt_sl f_l m_r_10">品牌：$!{facMaterial.brand}</div>
                        <div class="txt_pp txt_sl f_l m_r_10">档次：$!parameterUtil.changeGrade($!{facMaterial.grade})</div>
                        <div class="txt_cd txt_sl f_l m_r_10">产地：$!{facMaterial.city}</div>
                    </dd>
                </dl>
                
         	     #end
			#end     
                
            </div>
            
        <!-- 分页 -->
        <!--	product_list end	-->
            <div class="page_list">
            	#parse($shop_page_dir)
            </div>
            
        </div>
        
    </div>
    <div class="clearfix"></div>
</div>
