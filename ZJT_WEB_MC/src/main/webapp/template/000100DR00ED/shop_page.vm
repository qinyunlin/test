##分页栏显示层
<div class='pagebtns'>
	<span>共找到<span class="red">$!{recCount}</span>条记录，当前第<span class="red" txt="页统计">$!{pageNo}</span>/<span>$!{pageCount}</span>页</span>
	<span class=#if($!pageNo==1)"currbtn disabledbtn"#else"currbtn"#end onclick="javascript:gotoPage('first')">首  页</span>
	<span class=#if($!pageNo==1)"currbtn disabledbtn"#else"currbtn"#end onclick="javascript:gotoPage('prev')">上一页</span>
	<span class=#if($!pageNo==$!pageCount||$!pageCount==0)"currbtn disabledbtn"#else"currbtn"#end onclick="javascript:gotoPage('next')">下一页</span>
	<span class=#if($!pageNo==$!pageCount||$!pageCount==0)"currbtn disabledbtn"#else"currbtn"#end onclick="javascript:gotoPage('last')">尾  页</span>
	跳转到
	<input id="jumpPage" type="text" style="width: 20px;margin-right:8px;" act="input" value=""></input>
	<span class='currbtn strong blue_green gray_bg' onclick="javascript:gotoPage('jump')">GO</span>
</div>

<script language="javascript">
	var curPage = $!{pageNo};
	var pageNo = curPage;
	var pageCount = $!{pageCount};
	function gotoPage(act) {
		if(act=="first") {
			if(curPage==1) {
				return;
			} else {
				pageNo=1;
			}
		} else if(act=="prev") {
			if(curPage==1) {
				return;
			} else {
				pageNo=curPage-1;
			}
		} else if(act=="next") {
			if(curPage==pageCount||pageCount==0) {
				return;
			} else {
				pageNo=curPage+1;
			}
		} else if(act=="last") {
			if(curPage==pageCount||pageCount==0) {
				return;
			} else {
				pageNo=pageCount;
			}
		} else if(act=="jump") {
			var tmpPageNo = $("#jumpPage:text").val();
			if(!isFinite(tmpPageNo)) {
    			alert("您输入的页数不是数字，请重新输入。");
    			return;
    		}	
    		if (tmpPageNo > pageCount) {
    			alert('你访问的页面不存在！');
    			$("#jumpPage").val('');
    			return;
    		}
    		if (tmpPageNo <= 0) {
    			pageNo = 1;
			} else { 
				pageNo = tmpPageNo;
			}
		}
		var firstPage = "$!{firstPage}";
		this.location=firstPage.replace("{pageNo}", pageNo);
	}
</script>
