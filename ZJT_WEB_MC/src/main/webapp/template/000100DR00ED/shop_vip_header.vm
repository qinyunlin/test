//收藏本站
var id = "$!{dataInfo.eid}";
var cook = new Cookie();
//从cookie读取用户信息
function loadUserFromCookie() {
	var user = {};
	user.uid = cook.getCookie("uid");
	user.uname = cook.getCookie("uname");
	var degree = cook.getCookie("degree");
	if (degree)
		user.degree = parseInt(degree);
	var searchTimes = cook.getCookie("searchTimes");
	if (searchTimes)
		user.searchTimes = parseInt(searchTimes);
	var validDays = cook.getCookie("validDays");
	if (validDays)
		user.validDays = parseInt(validDays);
	user.EID = cook.getCookie("EID");
	user.corpName = cook.getCookie("corpName");
	var isAdmin = cook.getCookie("isAdmin");
	user.isAdmin = (isAdmin == "true" ? true : false);
	user.memberType = cook.getCookie("memberType");
	user.webProvince = cook.getCookie("webProvince");
	return user;
};
var currUser =  loadUserFromCookie();
if(currUser.EID && currUser.EID == id){
	$('#system_manage').css('visibility', 'visible');
}

//收藏公司
function collectEmp(){
	if (!currUser.uid) {
		alert("您未登录，无法进行该操作");
		return ;
	}
	uid = currUser.uid;
	if(currUser.degree == 11||currUser.degree == 12){
		alert("对不起,您未通过审核,暂不能进行此操作!");
		return;
	}
	var notes="";
	if((currUser.degree!=8)&&(currUser.degree!=9))
	{
		notes = prompt("请为该客户添加备注,备注可以为空",'');	
	}
	if(notes||notes==''){
		if(currUser.degree==9){
			alert("对不起，您不能进行此操作。");
			return;
		}
		var data={'uid':uid,'notes':notes, cid : id};
		$!{doll}.ajax({
			type : 'post',
			url : '/account/Customer.do?method=add',
			data : data,
			complete:function(json){
				var data = eval("("+json.responseText+")");
				if (data.state=='failed')
					alert(data.result);
				else if(data.state=='success'){
					alert("添加成功!");
				}
			}
		});
	}
};

</script>
